# right monitor
bar {
  output $right
  tray_output none
  i3bar_command i3bar
  status_command i3status --config ~/.config/i3/i3status.conf
  position top
  separator_symbol "|"
  colors {
    background $cla
    statusline $colour3
    separator  $colour3
    #                  border     backgr.   text
    focused_workspace  $cla       $cla      $colour3
    active_workspace   $clf       $clf      $gruv0
    inactive_workspace $clb       $clb      $colour3
    urgent_workspace   $colour1   $colour1  $colour3
    binding_mode       $gruvB     $gruvB    $gruv0
  }
  workspace_buttons yes
  hidden_state hide
  binding_mode_indicator yes
  # mode hide
  modifier none
}

# left monitor
bar {
  output $left
  tray_output $left
  # i3bar_command i3bar --transparency
  i3bar_command i3bar
  status_command i3status --config ~/.config/i3/i3status-small.conf
  position top
  separator_symbol " | "
  colors {
      background $cla
      statusline $colour3
      separator  $colour3
      #                  border     backgr.   text
      focused_workspace  $cla       $cla      $colour3
      active_workspace   $clf       $clf      $gruv0
      inactive_workspace $clb       $clb      $colour3
      urgent_workspace   $colour1   $colour1  $colour3
      binding_mode       $gruvB     $gruvB    $gruv0
  }
  workspace_buttons yes
  hidden_state hide
  binding_mode_indicator yes
  # mode hide
  modifier none
}

