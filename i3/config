# right monitor
bar {
  output $right
  tray_output none
  i3bar_command i3bar
  status_command i3status --config ~/.config/i3/i3status.conf
  position top
  separator_symbol "|"
  colors {
      background $gruv0
      statusline $gruvB
      # statusline $colour1
      separator $gruv8
      #                  border     backgr.   text
      focused_workspace  $colour1   $colour1  $colour3
      inactive_workspace $colour3   $colour3  $colour1
      urgent_workspace   $gruv9     $gruv9    $gruv0
  }
  workspace_buttons yes
  hidden_state hide
  binding_mode_indicator yes
  # mode hide
  modifier none
}

# left monitor
bar {
  output $left
  tray_output $left
  i3bar_command i3bar
  status_command i3status --config ~/.config/i3/i3status-small.conf
  position top
  separator_symbol "|"
  colors {
      background $gruv0
      statusline $gruvB
      # statusline $colour1
      separator $gruv8
      #                  border     backgr.   text
      focused_workspace  $colour1   $colour1  $colour3
      inactive_workspace $colour3   $colour3  $colour1
      urgent_workspace   $gruv9     $gruv9    $gruv0
  }
  workspace_buttons yes
  hidden_state hide
  binding_mode_indicator yes
  # mode hide
  modifier none
}

