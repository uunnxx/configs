###############################################################################
# GENERAL SETTINGS
#

set $mod Mod4
set $ctrl Control
set $alt Mod1
set $mod3 Mod3
set $sh Shift
set $term "alacritty"
set $term_float "alacritty --class=alacrittyFloat"
set $trans_ru "alacritty --class=alacrittyTransRight -e trans -t ru -I"
set $trans_en "alacritty --class=alacrittyTransRight -e trans -t en -I"
set $trans_ru_left "alacritty --class=alacrittyTransLeft -e trans -t ru -I"
set $trans_en_left "alacritty --class=alacrittyTransLeft -e trans -t en -I"


# set $term "contour"
# set $term_float "alacritty --class=contourFloat"
# set $trans_ru "alacritty --class=contourTransRight -e trans -t ru -I"
