###############################################################################
# STATUSBAR
#

# Colours
set $fff #FFFFFF
set $cla #39375B
set $clb #745C97
set $clf #EBA6A9
set $clh #F0544F
set $clj #5B3758
set $gruv0 #1d2021
set $gruv1 #CC241D
set $gruv9 #FB4934
set $gruvB #FABD2F


# Bar
bindsym $mod+$sh+m bar mode toggle

# Right Monitor
bar {
    font pango:Iosevka Nerd Font Bold 10
    tray_padding 0
    output $right
    tray_output none
    i3bar_command i3bar
    # i3bar_command i3bar --transparency
    status_command i3status --config ~/.config/i3/i3status.conf
    position bottom
    separator_symbol " | "
    workspace_min_width 80
    workspace_buttons yes
    hidden_state hide
    binding_mode_indicator yes
    # mode hide
    modifier none
    # padding 2px
    colors {
        background #1D2021DF
        statusline $gruvB
        separator  $clh
        #                  border     backgr.    text
        focused_workspace  $gruvB     $gruvB     $gruv0
        active_workspace   $clf       $clf       $gruv0
        inactive_workspace $clj       $clj       $fff
        urgent_workspace   $gruv9     $gruv9     $fff
        binding_mode       $gruvB     $gruvB     $gruv0
    }
}

# Left Monitor
bar {
    font pango:Iosevka Nerd Font Bold 10
    tray_padding 0
    output $left
    tray_output $left
    i3bar_command i3bar
    # i3bar_command i3bar --transparency
    status_command i3status --config ~/.config/i3/i3status-small.conf
    position bottom
    separator_symbol " | "
    workspace_min_width 80
    workspace_buttons yes
    hidden_state hide
    binding_mode_indicator yes
    # mode hide
    modifier none
    colors {
        background #1D2021DF
        statusline $gruvB
        separator  $clh
        #                  border     backgr.    text
        focused_workspace  $gruvB     $gruvB     $gruv0
        active_workspace   $clf       $clf       $gruv0
        inactive_workspace $clj       $clj       $fff
        urgent_workspace   $gruv9     $gruv9     $fff
        binding_mode       $gruvB     $gruvB     $gruv0
    }
}

# Clients
# class                   border    backgr.   text        indic.   child_border
client.focused            $clj      $clj      $fff        $gruv1
client.focused_inactive   $clb      $clb      $fff        $gruv1
client.unfocused          $cla      $cla      $fff        $gruv1
client.urgent             $clh      $clh      $fff        $gruv1



