set notification-warning-fg     "#fabd2f" # bright:yellow
set notification-bg             "#282828" # bg
set notification-fg             "#b8bb26" # bright:green

set completion-bg               "#39375B" # bg2
set completion-fg               "#FFFFFF" # fg
set completion-group-bg         "#FFFFFF" # bg1
set completion-group-fg         "#FFFFFF" # gray
set completion-highlight-bg     "#745C97" # bright:blue
set completion-highlight-fg     "#FFFFFF" # bg2

# Define the color in index mode
set index-bg                    "#39375B" # bg2
set index-fg                    "#FFFFFF" # fg
set index-active-bg             "#745C97" # bright:blue
set index-active-fg             "#FFFFFF" # bg2

set inputbar-bg                 "#282828" # bg
set inputbar-fg                 "#ebdbb2" # fg

set statusbar-bg                "#745C97" # bg2
set statusbar-fg                "#FFFFFF" # fg

set highlight-color             "#fabd2f" # bright:yellow
set highlight-active-color      "#fe8019" # bright:orange

set default-bg                  "#282828" # bg
set default-fg                  "#ebdbb2" # fg
set render-loading              true
set render-loading-bg           "#282828" # bg
set render-loading-fg           "#ebdbb2" # fg

# Recolor book content's color
set recolor-lightcolor          "#282828" # bg
set recolor-darkcolor           "#ebdbb2" # fg
set recolor                     "false"
# set recolor-keephue             true      # keep original color


set selection-clipboard clipboard

set statusbar-h-padding 5
set statusbar-v-padding 5

# set smooth-scroll true

set page-padding 2

map u scroll half-up
map e scroll half-down

map p toggle_page_mode

map R reload
map r rotate

map K zoom in
map J zoom out

map i recolor
map q recolor

map Esc abort

map . quit
# 
map Q quit

# set sandbox strict

map BackSpace ^o
